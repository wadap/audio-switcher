{
  "name": "audio-switcher",
  "version": "1.0.0",
  "description": "Minimal audio output switcher for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --publish never",
    "build:installer": "electron-builder --win nsis --publish never",
    "generate-tray-icons": "node scripts/generate-tray-icons.js"
  },
  "author": "Shuichi",
  "license": "MIT",
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "files": ["package.json", "src/**", "assets/**", "node_modules/**"],
    "appId": "com.shuichi.audio-switcher",
    "productName": "Audio Switcher",
    "win": {
      "target": ["portable", "nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    },
    "portable": {
      "artifactName": "AudioSwitcher-Portable.exe"
    }
  }
}
